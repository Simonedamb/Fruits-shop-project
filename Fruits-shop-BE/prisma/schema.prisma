generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Fruits {
    id        Int      @id @default(autoincrement())
    name      String   @db.VarChar(255)
    genus     String?  @db.VarChar(255)
    image     String
    price     Decimal  @db.Decimal(5, 2)
    family    String?  @db.VarChar(255)
    order     String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    nutrition Nutrition[] @relation("FruitsHasNutrition")
}

model Nutrition {
    id            Int      @id @default(autoincrement())
    carbohydrates Decimal  @db.Decimal(5, 2)
    protein       Decimal  @db.Decimal(5, 2)
    fath          Decimal  @db.Decimal(5, 2)
    calories      Decimal  @db.Decimal(5, 2)
    sugar         Decimal  @db.Decimal(5, 2)
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    fruits   Fruits @relation("FruitsHasNutrition", fields: [fruitsId], references: [id])
    fruitsId Int
}
